<section class="section">
  <h2 class="page-heading">Gift Registry</h2>
  <p class="registry-intro">We are so grateful for your love and support. You can find our registries at the links below.</p>
  <div class="registry-links">
    <a href="https://www.amazon.com/wedding-registry" class="registry-link" target="_blank" rel="noopener">Amazon Registry</a>
    <a href="https://www.zola.com/registry" class="registry-link" target="_blank" rel="noopener">Zola Registry</a>
  </div>
</section>

<section class="section">
  <h3 class="page-heading">Gift Ideas</h3>
  <div class="gift-grid">
    <% if (Array.isArray(gifts)) { %>
      <% gifts.forEach(function(gift) { %>
        <div class="gift-item">
          <p><strong><%= gift.name %></strong></p>
          <a href="<%= gift.url %>" target="_blank" rel="noopener"><%= gift.linkText || 'View Item' %></a>
        </div>
      <% }); %>
    <% } %>
  </div>
</section>
